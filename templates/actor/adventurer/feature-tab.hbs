  <div class="flexcol spaced">
    <div class="flexrow">
      <div class="section">
        <div class="flexrow">
          <h2>{{localize "TRESPASSER.MenuLabels.featurepage"}}</h2>
        </div>
				<div class='item-controls'>
					<a
						class='item-control item-create'
						title='{{localize "DOCUMENT.Create" type='feature'}}'
						data-type='feature'
						data-item-type='feature'
					>
						<i class='fas fa-plus'></i>
						{{localize 'DOCUMENT.New' type='Item'}}
					</a>
				</div>
        <div class="flex-container">
          {{#each context.features as |feature id|}}
          {{> "systems/trespasser/templates/actor/adventurer/items/list-simple.hbs" feature}}
          {{/each}}
        </div>
      </div>
    </div>
    <div class="flexrow">
      <div class="section">
        <div class="flexrow">
          <h2>{{localize "TRESPASSER.MenuLabels.talents"}}</h2>
        </div>
				<div class='item-controls'>
					<a
						class='item-control item-create'
						title='{{localize "DOCUMENT.Create" type='talent'}}'
						data-type='talent'
						data-item-type='talent'
					>
						<i class='fas fa-plus'></i>
						{{localize 'DOCUMENT.New' type='Item'}}
					</a>
				</div>
        <div class="flex-container">
          {{#each context.talents as |talent id|}}
          {{> "systems/trespasser/templates/actor/adventurer/items/list-simple.hbs" talent}}
          {{/each}}
        </div>
      </div>
    </div>

  </div>
