  <div class="flexcol spaced">
    <div class="flexrow">
      <div class="section">
        <div class="flexrow">
          <h2>{{localize "TRESPASSER.MenuLabels.general"}}</h2>
        </div>
        <div class="flex-container">
          {{#each context.features as |feature id|}}
          {{> "systems/trespasser/templates/actor/adventurer/items/list-simple.hbs" feature}}
          {{/each}}
          {{#each context.talents as |talent id|}}
          {{> "systems/trespasser/templates/actor/adventurer/items/list-simple.hbs" talent}}
          {{/each}}
          {{#each context.otherAbilities as |ability id|}}
          {{> "systems/trespasser/templates/actor/adventurer/items/list-simple.hbs" ability}}
          {{/each}}
        </div>
      </div>
    </div>
    <div class="flexrow">
      <div class="section">
        <div class="flexrow">
          <h2>{{localize "TRESPASSER.MenuLabels.actions"}}</h2>
        </div>
        <div class="flex-container">
          {{#each context.actions as |action id|}}
          {{> "systems/trespasser/templates/actor/adventurer/items/list-action.hbs" action=action id=id}}
          {{/each}}
        </div>
      </div>
    </div>
  </div>
