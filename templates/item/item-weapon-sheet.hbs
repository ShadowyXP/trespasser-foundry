<form class="{{cssClass}}" autocomplete="off">
  <div class="flexcol spaced">
    <div id="header" class="flexrow spaced">
      <div class="flexrow spaced">
        <div class="flex0 img"><img src="{{item.img}}" data-edit="img" title="{{item.name}}"/></div>
        <div class="flexcol spaced">
          <input id="name" type="text" name="name" value="{{item.name}}" placeholder="{{localize "trespasser.name"}}" />
					{{> 'systems/trespasser/templates/fields/select-field.hbs' label='TRESPASSER.ItemLabels.weight' field='system.weight' options=Weight selected=document.system.weight includeEmpty=false localizeOptions=true}}
					{{> 'systems/trespasser/templates/fields/select-field.hbs' label='TRESPASSER.ItemLabels.damage' field='system.damage' options=Damage selected=document.system.damage includeEmpty=true localizeOptions=true}}
          {{> 'systems/trespasser/templates/fields/bool-field.hbs' label='TRESPASSER.ItemLabels.twohanded' field='system.two_handed' isChecked=document.system.two_handed}}

        </div>
      </div>
    </div>

    <div id="body">
        {{> 'systems/trespasser/templates/fields/text-field.hbs' label='TRESPASSER.EquipLabels.weaponeffect' field='system.details' value=document.system.details}}
    </div>
  </div>
</form>
