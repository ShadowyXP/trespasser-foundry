<form class="{{cssClass}}" autocomplete="off">
  <div class="flexcol spaced">
    <div id="header" class="flexrow spaced">
      <div class="flexrow spaced">
        <div class="flex0 img"><img src="{{item.img}}" data-edit="img" title="{{item.name}}"/></div>
        <div class="flexcol spaced">
          <input id="name" type="text" name="name" value="{{item.name}}" placeholder="{{localize "trespasser.name"}}" />
					{{> 'systems/trespasser/templates/fields/select-field.hbs' label='TRESPASSER.ItemLabels.item-type' field='system.type' options=ItemTypes selected=document.system.type includeEmpty=false localizeOptions=true}}
        </div>
      </div>
    </div>

    <div id="body">
      <h3 class="corners mid">Details</h3>
			<div class="description" data-group="primary" data-tab="description">
				{{editor enrichedDetails target="system.details" button=true owner=owner editable=editable}}
			</div>
        {{> 'systems/trespasser/templates/fields/number-field.hbs' label='TRESPASSER.ItemLabels.quantity' field="system.quantity" value=document.system.quantity min=0 max=30}}
    </div>
  </div>
</form>
