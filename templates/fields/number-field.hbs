<div class="form-group flexrow">
	{{#if (ne label '')}}
  	<label class="flex2">{{localize label}}</label>
	{{/if}}
  <div class="form-fields flex2">
    <input type="text" name="{{field}}" value="{{value}}" placeholder="{{#if placeholder}}{{placeholder}}{{else}}{{localize label}}{{/if}}" data-dtype="Number" />
  </div>
</div>
